<% if @tweets %>
<div id="tweet_list">
<% @tweets.each do |tweet| %>
  <% if tweet.is_a? Twitter::Tweet %>
    <div class="tweet">
      <div class="tweet_id hidden"><%= tweet.id %></div>
      <div class="tweet_image">
        <a href="<%= tweet.user.url %>" 
        title="<%= tweet.user.name %>">
        <img src="<%= tweet.user.profile_image_url %>" width="48" height="48"></a>		
      </div>
      <div class="tweet_right">
        <div class="tweet_screen_name">
          <a href="<%= tweet.user.url %>" 
            title="<%= tweet.user.name %>"><s>@</s><b><%= tweet.user.screen_name %></b></a>
          <span class="tweet_name"><%= tweet.user.name %></b></span>
        </div>
        <div class="tweet_text"><%= parse_twitter tweet.text %>
          <div class="tweet_date">
            <a href="<%= tweet.url %>"><%= tweet_distance_of_time tweet.created_at %></a>
          </div>
        </div>
      </div>
    </div><hr />
  <% end %>
<% end %>
</div>
<% else %>
 <div class="text-warning">@<%= @handle %> hasn't tweeted yet :(</div>
<% end %>